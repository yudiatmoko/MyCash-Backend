generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @unique @default(uuid())
  name        String
  email       String    @unique
  phoneNumber String?   @unique @map("phone_number")
  image       String?
  password    String
  isVerified  Boolean   @default(false) @map("is_verified")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  sessions    Session[]
  outlets     Outlet[]

  @@map("users")
}

model Outlet {
  id          String     @id @unique @default(uuid())
  name        String
  type        String
  phoneNumber String     @map("phone_number")
  address     String
  district    String
  city        String
  province    String
  image       String?
  userId      String
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  categories  Category[]
  products    Product[]
  sessions    Session[]

  user User @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@map("outlets")
}

model Category {
  id        String    @id @unique @default(uuid())
  name      String
  slug      String
  outletId  String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  products  Product[]

  outlet Outlet @relation(fields: [outletId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@map("categories")
}

model Product {
  id                 String              @id @unique @default(uuid())
  name               String
  description        String
  price              Float
  status             Boolean
  stock              Int?
  categoryId         String
  outletId           String
  image              String
  createdAt          DateTime            @default(now()) @map("created_at")
  updatedAt          DateTime            @updatedAt @map("updated_at")
  transactionDetails TransactionDetail[]

  category Category @relation(fields: [categoryId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  outlet   Outlet   @relation(fields: [outletId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@map("products")
}

model Transaction {
  id            String              @id @unique @default(uuid())
  number        Int
  date          DateTime
  totalPrice    Float               @map("total_price")
  totalPayment  Float               @map("total_payment")
  totalCharge   Float               @map("total_charge")
  paymentMethod PaymentMethod       @map("payment_method")
  note          String?
  sessionId     String
  isVoided      Boolean             @default(false)
  createdAt     DateTime            @default(now()) @map("created_at")
  updatedAt     DateTime            @updatedAt @map("updated_at")
  details       TransactionDetail[]

  session          Session            @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  TransactionImage TransactionImage[]

  @@map("transactions")
}

model TransactionDetail {
  id            String @id @unique @default(uuid())
  transactionId String
  productId     String
  productName   String @map("product_name")
  productQty    Int    @map("product_qty")
  productPrice  Float  @map("product_price")
  totalPrice    Float  @map("total_price")

  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  product     Product     @relation(fields: [productId], references: [id])

  @@map("transaction_details")
}

model Session {
  id           String        @id @default(uuid())
  date         DateTime      @map("session_date")
  shift        Shift         @map("shift")
  startingCash Float         @map("starting_cash")
  totalRevenue Float         @default(0) @map("total_revenue")
  checkInTime  DateTime?     @default(now()) @map("check_in_time")
  checkOutTime DateTime?     @map("check_out_time")
  userId       String
  outletId     String
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  transactions Transaction[]

  outlet       Outlet         @relation(fields: [outletId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  user         User           @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  SessionImage SessionImage[]

  @@map("sessions")
}

model Otp {
  id        String   @id @default(uuid())
  email     String
  otpCode   String   @map("otp_code")
  expiresAt DateTime @map("expires_at")

  @@index([email])
  @@map("otp")
}

model SessionImage {
  id        String  @id @default(uuid())
  sessionId String
  image     String
  session   Session @relation(fields: [sessionId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@map("sessionImage")
}

model TransactionImage {
  id            String      @id @default(uuid())
  transactionId String
  image         String
  transaction   Transaction @relation(fields: [transactionId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@map("transactionImage")
}

enum PaymentMethod {
  CASH
  QRIS
}

enum Shift {
  MORNING
  EVENING
}
